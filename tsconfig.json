{
	"compilerOptions": {
		"outDir": "./dist", // Compilar para a pasta 'dist'
		"rootDir": "./src", // Código fonte na pasta 'src'
		"esModuleInterop": true, // Habilitar interoperabilidade de módulos
		"module": "CommonJS", // Usar módulos CommonJS
		"target": "ES6"
	},
	"include": [
		"src/**/*"
	] // Incluir todos os arquivos em 'src'
}